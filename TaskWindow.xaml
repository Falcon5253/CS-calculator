<Window x:Class="CS_calculator.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_calculator"
        mc:Ignorable="d"
        Title="Tutorial" Height="400" Width="300" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="10 10 10 20" Text="Список возможных операций."/>
        <TextBlock Margin="10 0 10 0" Text="Сложение: +" />
        <TextBlock Margin="10 0 10 0" Text="Вычитание: -" />
        <TextBlock Margin="10 0 10 0" Text="Деление: /" />
        <TextBlock Margin="10 0 10 0" Text="Умножение" />
        <TextBlock Margin="10 10 10 0" Text="Используйте скобки () для переопределения" />
        <TextBlock Margin="10 0 10 0" Text="приоритета операций" />
        <TextBlock Margin="10 0 10 0" Text="" />
    </StackPanel>
</Window>

<Window x:Class="CS_calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="200" Width="440" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="text" FontSize="32" Width="400" Height="100" Margin="10 0 10 0"/>
        <StackPanel Orientation="Horizontal" Width="400" Margin="10 0 10 0">
            <Button Width="200" Height="50" Content="Инструкция" Click="ManualButton_Click" />
            <Button Width="200" Height="50" Content="Посчитать" Click="CalculateButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
